<?xml version="1.0"?>
<entity-mappings
  xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/orm"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="2.1"
  xsi:schemaLocation="
        http://www.eclipse.org/eclipselink/xsds/persistence/orm
        http://www.eclipse.org/eclipselink/xsds/eclipselink_orm_2_1.xsd"
  >
  <object-type-converter name="role"
                         object-type="com.ec.deploy.model.auth.Role"
                         data-type="java.lang.String">
    <conversion-value data-value="GUEST" object-value="GUEST"/>
    <conversion-value data-value="USER" object-value="USER"/>
    <conversion-value data-value="TENANT_USER" object-value="TENANT_USER" />
    <conversion-value data-value="TENANT_ADMINISTRATOR" object-value="TENANT_ADMINISTRATOR" />
    <conversion-value data-value="ADMINISTRATOR" object-value="ADMINISTRATOR" />

  </object-type-converter>


  <mapped-superclass class="com.ec.deploy.model.core.PersistentEntity">
    <attributes>
      <id name="id">
        <generated-value strategy="IDENTITY"/>
      </id>
      <basic name="name" />
      <basic name="description" />
    </attributes>
  </mapped-superclass>

  <mapped-superclass class="com.ec.deploy.model.core.TenantRestrictedEntity">
    <attributes>
      <many-to-one name="tenant" optional="false" fetch="LAZY"/>
    </attributes>
  </mapped-superclass>

  <mapped-superclass class="com.ec.deploy.model.graph.Element">
    <attributes>
      <many-to-one name="container" optional="false" fetch="LAZY" />
    </attributes>
  </mapped-superclass>

  <entity class="com.ec.deploy.model.auth.User">
    <attributes>
      <basic name="firstName" optional="false">
        <column length="50"/>
      </basic>
      <basic name="lastName" optional="false">
        <column unique="true"/>
      </basic>
      <basic name="username" optional="false">
        <column length="50"/>
      </basic>
      <basic-collection name="authorities" fetch="EAGER">
        <value-column name="ROLE" />
        <convert>role</convert>
      </basic-collection>
    </attributes>
  </entity>


  <entity class="com.ec.deploy.model.tenancy.Tenant" />

  <entity class="com.ec.deploy.model.graph.Vertex">
    <attributes>
      <one-to-many
        name="successors"
        target-entity="com.ec.deploy.model.graph.Edge"
        mapped-by="source"
        fetch="LAZY"
        />
      <one-to-many
        name="predecessors"
        target-entity="com.ec.deploy.model.graph.Edge"
        mapped-by="target"
        fetch="LAZY"
       />
    </attributes>
  </entity> 

  <entity class="com.ec.deploy.model.graph.Edge">
    <attributes>
      <many-to-one
        name="source"
        target-entity="com.ec.deploy.model.graph.Vertex"
        fetch="LAZY"
        >
        <cascade>
          <cascade-all/>
        </cascade>
        </many-to-one>
      <many-to-one
        name="target"
        target-entity="com.ec.deploy.model.graph.Vertex"
        fetch="LAZY"
      >
        <cascade>
          <cascade-all/>
        </cascade>

      </many-to-one>

    </attributes>
  </entity>

</entity-mappings>